<div class="mx-auto w-full max-w-lg space-y-6 rounded-3xl border border-gray-200 bg-white p-8 shadow-sm">
  <header class="space-y-2 text-center">
    <h1 class="text-2xl font-semibold text-gray-900">Create your account</h1>
    <p class="text-sm text-gray-500">Join BanHang to save your cart and track orders.</p>
  </header>

  <%= render "shared/form_errors", object: @user %>

  <%= form_with model: @user, url: registrations_path, local: true, class: "space-y-5" do |form| %>
    <div class="space-y-1">
      <%= form.label :name, class: "text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, autofocus: true, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 #{error_class(@user, :name)}" %>
      <%= field_error(@user, :name) %>
    </div>
    <div class="space-y-1">
      <%= form.label :email, class: "text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 #{error_class(@user, :email)}" %>
      <%= field_error(@user, :email) %>
    </div>
    <div class="space-y-1">
      <%= form.label :password, class: "text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 #{error_class(@user, :password)}" %>
      <p class="text-xs text-gray-400">Minimum 8 characters.</p>
      <%= field_error(@user, :password) %>
    </div>
    <div class="space-y-1">
      <%= form.label :password_confirmation, class: "text-sm font-medium text-gray-700" %>
      <%= form.password_field :password_confirmation, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 #{error_class(@user, :password_confirmation)}" %>
      <%= field_error(@user, :password_confirmation) %>
    </div>

    <%= form.submit "Create account", class: "w-full rounded-lg bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow transition hover:bg-indigo-500", data: { disable_with: "Creating..." } %>
  <% end %>

  <p class="text-center text-sm text-gray-500">Already have an account? <%= link_to "Log in", new_session_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %></p>
</div>
