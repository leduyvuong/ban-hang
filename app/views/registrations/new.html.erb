<div class="mx-auto w-full max-w-lg space-y-6 rounded-3xl border border-gray-200 bg-white p-8 shadow-sm">
  <header class="space-y-2 text-center">
    <h1 class="text-2xl font-semibold text-gray-900">Create your account</h1>
    <p class="text-sm text-gray-500">Join BanHang to save your cart and track orders.</p>
  </header>

  <% if @user.errors.any? %>
    <div class="rounded-2xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-600">
      <p class="font-semibold"><%= pluralize(@user.errors.count, "error") %> prevented account creation:</p>
      <ul class="mt-2 list-disc pl-5">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: registrations_path, local: true, class: "space-y-5" do |form| %>
    <div class="space-y-1">
      <%= form.label :name, class: "text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, autofocus: true, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" %>
    </div>
    <div class="space-y-1">
      <%= form.label :email, class: "text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" %>
    </div>
    <div class="space-y-1">
      <%= form.label :password, class: "text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" %>
      <p class="text-xs text-gray-400">Minimum 8 characters.</p>
    </div>
    <div class="space-y-1">
      <%= form.label :password_confirmation, class: "text-sm font-medium text-gray-700" %>
      <%= form.password_field :password_confirmation, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" %>
    </div>

    <%= form.submit "Create account", class: "w-full rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow transition hover:bg-indigo-500" %>
  <% end %>

  <p class="text-center text-sm text-gray-500">Already have an account? <%= link_to "Log in", new_session_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %></p>
</div>
