<div class="mx-auto w-full max-w-md space-y-6 rounded-3xl border border-gray-200 bg-white p-8 shadow-sm">
  <header class="space-y-2 text-center">
    <h1 class="text-2xl font-semibold text-gray-900">Choose a new password</h1>
    <p class="text-sm text-gray-500">Enter your new password below.</p>
  </header>

  <%= form_with model: @user, url: password_reset_path(@token), method: :patch, local: true, class: "space-y-5" do |form| %>
    <%= hidden_field_tag :token, @token %>
    <div class="space-y-1">
      <%= form.label :password, class: "text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, autofocus: true, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" %>
    </div>
    <div class="space-y-1">
      <%= form.label :password_confirmation, class: "text-sm font-medium text-gray-700" %>
      <%= form.password_field :password_confirmation, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" %>
    </div>
    <%= form.submit "Update password", class: "w-full rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow transition hover:bg-indigo-500" %>
  <% end %>
</div>
