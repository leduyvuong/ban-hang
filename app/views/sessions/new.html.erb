<div class="mx-auto w-full max-w-md space-y-6 rounded-3xl border border-gray-200 bg-white p-8 shadow-sm">
  <header class="space-y-2 text-center">
    <h1 class="text-2xl font-semibold text-gray-900">Welcome back</h1>
    <p class="text-sm text-gray-500">Log in to manage your cart and track orders.</p>
  </header>

  <%= form_with scope: :session, url: session_path, method: :post, local: true, class: "space-y-5" do |form| %>
    <div class="space-y-1">
      <%= form.label :email, class: "text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, autofocus: true, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" %>
    </div>
    <div class="space-y-1">
      <div class="flex items-center justify-between">
        <%= form.label :password, class: "text-sm font-medium text-gray-700" %>
        <%= link_to "Forgot password?", new_password_reset_path, class: "text-xs font-semibold text-indigo-600 hover:text-indigo-500" %>
      </div>
      <%= form.password_field :password, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" %>
    </div>

    <div class="flex items-center justify-between">
      <label class="inline-flex items-center gap-2 text-sm text-gray-600">
        <%= form.check_box :remember_me, class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
        Remember me
      </label>
      <%= link_to "Need an account?", new_registration_path, class: "text-sm font-semibold text-indigo-600 hover:text-indigo-500" %>
    </div>

    <%= form.submit "Log in", class: "w-full rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow transition hover:bg-indigo-500" %>
  <% end %>
</div>
