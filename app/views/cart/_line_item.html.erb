<% compact = local_assigns.fetch(:compact, false) %>
<% product = item.product %>

<div class="flex gap-4 rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
  <div class="h-20 w-20 overflow-hidden rounded-xl bg-gray-100">
    <% if product&.image_url.present? %>
      <img src="<%= product.image_url %>" alt="<%= product.name %>" class="h-full w-full object-cover" loading="lazy">
    <% else %>
      <div class="flex h-full items-center justify-center text-xs font-medium text-gray-400">No image</div>
    <% end %>
  </div>

  <div class="flex flex-1 flex-col gap-2">
    <div class="flex flex-wrap items-start justify-between gap-2">
      <div>
        <h3 class="text-base font-semibold text-gray-900">
          <%= link_to product.name, product_path(product), class: "transition hover:text-indigo-600" %>
        </h3>
        <% if product.short_description.present? %>
          <p class="text-sm text-gray-500"><%= product.short_description %></p>
        <% end %>
      </div>
      <div class="text-right text-sm text-gray-500">
        <span class="text-base font-semibold text-gray-900"><%= number_to_currency(product.price) %></span>
      </div>
    </div>

    <% if compact %>
      <div class="flex items-center justify-between text-sm text-gray-600">
        <span>Qty: <%= item.quantity %></span>
        <span class="font-semibold text-gray-900"><%= number_to_currency(item.subtotal) %></span>
      </div>
    <% else %>
      <div class="flex flex-wrap items-center justify-between gap-4">
        <div class="flex items-center rounded-full border border-gray-300 bg-white px-3 py-1 text-sm shadow-sm">
          <button type="button" class="px-2 text-gray-500 transition hover:text-indigo-600" aria-label="Decrease quantity" data-action="click->cart#decrementItem" data-cart-product-id-param="<%= product.to_param %>" data-product-id="<%= product.to_param %>">âˆ’</button>
          <input type="number" min="1" class="w-14 border-0 text-center text-sm font-medium text-gray-900 focus:outline-none" value="<%= item.quantity %>" data-action="change->cart#updateQuantity" data-cart-product-id-param="<%= product.to_param %>" data-product-id="<%= product.to_param %>">
          <button type="button" class="px-2 text-gray-500 transition hover:text-indigo-600" aria-label="Increase quantity" data-action="click->cart#incrementItem" data-cart-product-id-param="<%= product.to_param %>" data-product-id="<%= product.to_param %>">+</button>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-base font-semibold text-gray-900"><%= number_to_currency(item.subtotal) %></span>
          <button type="button" class="text-sm font-medium text-red-500 transition hover:text-red-600" data-action="click->cart#removeItem" data-cart-product-id-param="<%= product.to_param %>" data-product-id="<%= product.to_param %>">Remove</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
