<div class="space-y-6 rounded-3xl border border-gray-200 bg-white p-6 shadow-sm">
  <div class="space-y-1">
    <p class="text-xs font-semibold uppercase tracking-wide text-indigo-600">Step 2 of 3</p>
    <h2 class="text-xl font-semibold text-gray-900">Review your order</h2>
    <p class="text-sm text-gray-500">Make sure your shipping details are correct before continuing.</p>
  </div>

  <div class="rounded-2xl border border-gray-100 bg-gray-50 p-4 text-sm text-gray-700">
    <div class="flex items-start justify-between gap-4">
      <div>
        <p class="font-semibold text-gray-900"><%= shipping_form.name %></p>
        <p><%= shipping_form.address %></p>
        <p><%= shipping_form.city %>, <%= shipping_form.postal_code %></p>
        <p class="mt-2 text-gray-500">Phone: <%= shipping_form.phone %></p>
      </div>
      <%= link_to "Edit", checkout_path(step: 1), data: { turbo_frame: "checkout_steps" }, class: "rounded-full border border-gray-200 px-3 py-1 text-xs font-semibold text-gray-600 transition hover:border-indigo-200 hover:text-indigo-600" %>
    </div>
  </div>

  <div class="rounded-2xl border border-gray-100 bg-gray-50 p-4 text-sm text-gray-600">
    <p class="font-semibold text-gray-900">Items in your cart</p>
    <ul class="mt-3 space-y-2">
      <% current_cart.items_with_products.each do |item| %>
        <li class="flex items-center justify-between">
          <span><%= item.product.name %> × <%= item.quantity %></span>
          <% if item.discount_applied? %>
            <span class="text-right">
              <span class="block text-xs text-gray-400 line-through"><%= format_money(item.regular_subtotal) %></span>
              <span class="font-semibold text-emerald-600"><%= format_money(item.subtotal) %></span>
            </span>
          <% else %>
            <span class="font-semibold text-gray-900"><%= format_money(item.subtotal) %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
    <% savings = current_cart.discount_total %>
    <% has_savings = savings.positive? %>
    <% regular_total = current_cart.regular_total %>
    <% total_due = current_cart.subtotal %>
    <div class="mt-4 space-y-2 border-t border-gray-200 pt-4 text-sm">
      <div class="flex items-center justify-between text-gray-600">
        <span>Items total (before discounts)</span>
        <span>
          <% if has_savings %>
            <span class="text-xs text-gray-400 line-through"><%= format_money(regular_total) %></span>
          <% else %>
            <span class="font-semibold text-gray-900"><%= format_money(total_due) %></span>
          <% end %>
        </span>
      </div>
      <% if has_savings %>
        <div class="flex items-center justify-between text-emerald-600">
          <span>Discount savings</span>
          <span>−<%= format_money(savings) %></span>
        </div>
      <% end %>
      <div class="flex items-center justify-between text-sm font-semibold text-gray-900">
        <span>Order total</span>
        <span><%= format_money(total_due) %></span>
      </div>
    </div>
    <% if has_savings %>
      <p class="mt-2 text-xs font-medium uppercase tracking-wide text-emerald-600">You saved <%= format_money(savings) %></p>
    <% end %>
  </div>

  <div class="flex items-center justify-end gap-3">
    <%= link_to "Back", checkout_path(step: 1), data: { turbo_frame: "checkout_steps" }, class: "rounded-full border border-gray-200 px-4 py-2 text-sm font-medium text-gray-600 transition hover:border-indigo-200 hover:text-indigo-600" %>
    <%= form_with url: checkout_path, method: :patch, data: { turbo_frame: "checkout_steps" }, class: "inline" do %>
      <%= hidden_field_tag :step, "review" %>
      <button type="submit" class="rounded-full bg-indigo-600 px-5 py-2 text-sm font-semibold text-white shadow transition hover:bg-indigo-500" data-disable-with="Continuing...">Continue to payment</button>
    <% end %>
  </div>
</div>
