<div class="space-y-6">
  <header>
    <p class="text-sm text-gray-500">Order</p>
    <h1 class="text-3xl font-bold text-gray-900">#<%= @order.order_number %></h1>
    <p class="text-sm text-gray-500">Placed <%= time_ago_in_words(@order.placed_at || @order.created_at || Time.current) %> ago</p>
  </header>

  <section class="rounded-3xl border border-gray-200 bg-white p-6 shadow-sm">
    <div class="flex flex-wrap items-start justify-between gap-4">
      <div>
        <p class="text-sm font-semibold text-gray-500">Status</p>
        <span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-gray-600"><%= @order.status %></span>
      </div>
      <div>
        <p class="text-sm font-semibold text-gray-500">Total</p>
        <p class="text-2xl font-semibold text-indigo-600"><%= number_to_currency(@order.total) %></p>
      </div>
    </div>
    <div class="mt-6 rounded-2xl border border-dashed border-gray-200 bg-gray-50 px-4 py-6 text-center text-sm text-gray-500">
      Order line items will appear here when checkout integration is complete.
    </div>
  </section>
</div>
