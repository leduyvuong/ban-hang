<div class="space-y-6">
  <header>
    <h1 class="text-3xl font-bold text-gray-900">My orders</h1>
    <p class="mt-1 text-sm text-gray-500">Review your recent purchases and track their status.</p>
  </header>

  <% if @orders.any? %>
    <div class="overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50 text-xs uppercase tracking-wide text-gray-500">
          <tr>
            <th class="px-4 py-3 text-left">Order</th>
            <th class="px-4 py-3 text-left">Status</th>
            <th class="px-4 py-3 text-left">Placed</th>
            <th class="px-4 py-3 text-right">Total</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 text-sm text-gray-600">
          <% @orders.each do |order| %>
            <tr class="hover:bg-indigo-50/50">
              <td class="px-4 py-3 font-semibold text-gray-900">
                <%= link_to "##{order.order_number}", order_path(order), class: "text-indigo-600 hover:text-indigo-500" %>
              </td>
              <td class="px-4 py-3"><span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-xs font-semibold capitalize text-gray-600"><%= order.status %></span></td>
              <td class="px-4 py-3"><%= (order.placed_at || order.created_at)&.strftime("%b %-d, %Y") %></td>
              <td class="px-4 py-3 text-right font-semibold text-gray-900"><%= format_money(order.total) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="rounded-2xl border border-dashed border-gray-200 bg-white px-6 py-12 text-center text-sm text-gray-500">
      You haven't placed any orders yet. When you do, they'll show up here.
    </div>
  <% end %>
</div>
