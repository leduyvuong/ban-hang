<div class="space-y-6">
  <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-wrap items-center justify-between gap-4">
      <div>
        <h2 class="text-lg font-semibold text-slate-900">Discount programs</h2>
        <p class="text-sm text-slate-500">Set up promotions and keep track of their status.</p>
      </div>
      <%= link_to "New discount", new_admin_discount_path, class: "inline-flex items-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500" %>
    </div>

    <% if @active_discounts.any? %>
      <div class="mt-6 rounded-2xl border border-emerald-100 bg-emerald-50 p-4 text-sm text-emerald-800">
        <div class="flex flex-wrap items-center justify-between gap-3">
          <div>
            <p class="font-semibold">Active now</p>
            <p class="text-xs text-emerald-700/80">These offers are currently visible to shoppers.</p>
          </div>
          <span class="inline-flex items-center rounded-full bg-white/90 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-emerald-700">
            <%= pluralize(@active_discounts.count, "live discount") %>
          </span>
        </div>
        <div class="mt-3 flex flex-wrap gap-2">
          <% @active_discounts.each do |discount| %>
            <span class="inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-xs font-semibold text-emerald-700 shadow-sm">
              <%= discount.name %>
              <% if discount.end_date.present? %>
                <span class="rounded-full bg-emerald-100 px-2 py-0.5 text-[10px] font-semibold uppercase tracking-wide">
                  Ends <%= l(discount.end_date, format: :short) %>
                </span>
              <% end %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @discounts.any? %>
      <div class="mt-6 overflow-hidden rounded-2xl border border-slate-200">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50 text-xs uppercase tracking-wide text-slate-500">
            <tr>
              <th scope="col" class="px-4 py-3 text-left">Name</th>
              <th scope="col" class="px-4 py-3 text-left">Value</th>
              <th scope="col" class="px-4 py-3 text-left">Schedule</th>
              <th scope="col" class="px-4 py-3 text-left">Status</th>
              <th scope="col" class="px-4 py-3 text-right">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100 bg-white text-sm text-slate-600">
            <% @discounts.each do |discount| %>
              <tr class="hover:bg-indigo-50/40">
                <td class="px-4 py-3 align-middle">
                  <p class="font-semibold text-slate-900"><%= discount.name %></p>
                  <p class="text-xs text-slate-500">
                    Assigned to <%= pluralize(discount.products.count, "product") %>
                  </p>
                </td>
                <td class="px-4 py-3 align-middle">
                  <div class="font-semibold text-slate-900"><%= discount.discount_type.humanize %></div>
                  <div class="text-xs text-slate-500">
                  <% if discount.percentage? %>
                    <%= number_to_percentage(discount.value.to_f, precision: 0) %>
                  <% else %>
                    <%= format_money(discount.value) %>
                  <% end %>
                  </div>
                </td>
                <td class="px-4 py-3 align-middle text-xs text-slate-500">
                  <% if discount.start_date.present? %>
                    <div>Starts <%= l(discount.start_date, format: :short) %></div>
                  <% else %>
                    <div>Starts immediately</div>
                  <% end %>
                  <% if discount.end_date.present? %>
                    <div>Ends <%= l(discount.end_date, format: :short) %></div>
                  <% else %>
                    <div>No end date</div>
                  <% end %>
                </td>
                <td class="px-4 py-3 align-middle">
                  <%= discount_status_badge(discount) %>
                </td>
                <td class="px-4 py-3 text-right align-middle">
                  <div class="inline-flex items-center gap-2 text-xs font-semibold">
                    <%= link_to "Edit", edit_admin_discount_path(discount), class: "rounded-full border border-indigo-100 bg-indigo-50 px-3 py-1 text-indigo-700 hover:bg-indigo-100" %>
                    <%= button_to(discount.active? ? "Deactivate" : "Activate", toggle_active_admin_discount_path(discount), method: :patch, class: "rounded-full border border-slate-200 px-3 py-1 text-slate-600 hover:border-indigo-200 hover:text-indigo-600", data: { turbo_confirm: "#{discount.active? ? 'Deactivate' : 'Activate'} #{discount.name}?" }) %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="mt-6 rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-10 text-center text-sm text-slate-500">
        No discounts yet. Create one to start offering promotions.
      </div>
    <% end %>
  </div>
</div>
