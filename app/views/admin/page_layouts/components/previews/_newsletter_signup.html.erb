<section class="rounded-3xl border border-dashed border-slate-300 bg-slate-900/90 p-6 text-slate-50 transition group-hover:border-blue-400 dark:border-slate-600" data-preview-field="background_color" style="background-color: <%= config["background_color"] %>; color: <%= config["text_color"] %>">
  <h3 class="text-xl font-semibold" data-preview-field="title"><%= config["title"] %></h3>
  <p class="mt-1 text-sm opacity-80" data-preview-field="subtitle"><%= config["subtitle"] %></p>
  <div class="mt-4 flex flex-col gap-3 sm:flex-row">
    <span class="inline-flex h-10 flex-1 items-center rounded-full bg-white/20 px-4 text-xs uppercase tracking-wide text-white/70">email@example.com</span>
    <span class="inline-flex items-center justify-center rounded-full bg-white px-4 py-2 text-xs font-semibold text-slate-900" data-preview-field="button_text"><%= config["button_text"] %></span>
  </div>
</section>
