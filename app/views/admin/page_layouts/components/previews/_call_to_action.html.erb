<section class="rounded-3xl border border-dashed border-slate-300 bg-blue-600/80 p-6 text-center text-white transition group-hover:border-blue-400 dark:border-slate-600" data-preview-field="background_color" style="background-color: <%= config["background_color"] %>; color: <%= config["text_color"] %>">
  <h3 class="text-xl font-semibold" data-preview-field="title"><%= config["title"] %></h3>
  <p class="mt-1 text-sm opacity-90" data-preview-field="subtitle"><%= config["subtitle"] %></p>
  <div class="mt-4 inline-flex items-center justify-center rounded-full bg-white px-6 py-2 text-xs font-semibold text-slate-900" data-preview-field="button_text"><%= config["button_text"] %></div>
</section>
