<section class="rounded-3xl border border-dashed border-slate-300 bg-white/80 p-6 transition group-hover:border-blue-400 dark:border-slate-600 dark:bg-slate-800" data-preview-field="background_color" style="background-color: <%= config["background_color"] %>; color: <%= config["text_color"] %>">
  <h3 class="text-xl font-semibold" data-preview-field="title"><%= config["title"] %></h3>
  <p class="mt-1 text-sm opacity-70" data-preview-field="subtitle"><%= config["subtitle"] %></p>
  <div class="mt-4 grid gap-3 sm:grid-cols-2" data-preview-field="features">
    <% Array(config["features"]).first(4).each do |feature| %>
      <div class="rounded-2xl border border-slate-200 bg-white p-4 text-sm shadow-sm dark:border-slate-600 dark:bg-slate-900/70">
        <p class="font-semibold text-slate-900 dark:text-slate-100"><%= feature["title"] %></p>
        <p class="text-xs text-slate-500"><%= feature["description"] %></p>
      </div>
    <% end %>
  </div>
</section>
