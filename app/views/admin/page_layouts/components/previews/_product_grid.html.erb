<section class="rounded-3xl border border-dashed border-slate-300 bg-white/70 p-6 transition group-hover:border-blue-400 dark:border-slate-600 dark:bg-slate-800" data-preview-field="background_color" style="background-color: <%= config["background_color"] %>; color: <%= config["text_color"] %>">
  <div class="flex items-start justify-between">
    <div>
      <h3 class="text-xl font-semibold" data-preview-field="title"><%= config["title"] %></h3>
      <p class="text-sm opacity-70" data-preview-field="subtitle"><%= config["subtitle"] %></p>
    </div>
    <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-500">Grid</span>
  </div>
  <div class="mt-4 grid gap-4 sm:grid-cols-2" data-preview-field="product_ids">
    <% Array(config["product_ids"]).first(4).each do |product_id| %>
      <div class="flex items-center gap-3 rounded-2xl border border-slate-200 bg-white p-3 text-left text-sm shadow-sm dark:border-slate-600 dark:bg-slate-900/70">
        <div class="h-12 w-12 flex-shrink-0 rounded-xl bg-slate-200"></div>
        <div>
          <p class="font-semibold text-slate-900 dark:text-slate-100">Sản phẩm #<%= product_id %></p>
          <p class="text-xs text-slate-500">Preview placeholder</p>
        </div>
      </div>
    <% end %>
    <% if Array(config["product_ids"]).empty? %>
      <div class="rounded-2xl border border-dashed border-slate-300 p-6 text-center text-sm text-slate-500 dark:border-slate-500">
        Chưa chọn sản phẩm
      </div>
    <% end %>
  </div>
</section>
