<div class="space-y-6">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h1 class="text-2xl font-semibold text-slate-900">Product reviews</h1>
      <p class="text-sm text-slate-500">Review, hide, or remove customer feedback across your catalogue.</p>
    </div>
    <%= form_with url: admin_reviews_path, method: :get, local: true, class: "flex flex-wrap items-center gap-2" do |form| %>
      <div class="relative">
        <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-slate-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 15.75 21 21" />
            <circle cx="10.5" cy="10.5" r="7.5" />
          </svg>
        </span>
        <%= form.text_field :query, value: @query, placeholder: "Search comments, products, or customers", class: "w-72 rounded-full border border-slate-200 bg-white py-2 pl-9 pr-4 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" %>
      </div>

      <%= form.select :status,
            options_for_select([["All reviews", ""], ["Visible", "visible"], ["Hidden", "hidden"]], @status_filter),
            {},
            class: "rounded-full border border-slate-200 bg-white px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" %>

      <%= form.submit "Filter", class: "inline-flex items-center rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500" %>
    <% end %>
  </div>

  <% if @reviews.any? %>
    <div class="overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm text-slate-600">
        <thead class="bg-slate-50 text-xs font-semibold uppercase tracking-wide text-slate-500">
          <tr>
            <th scope="col" class="px-4 py-3 text-left">Product</th>
            <th scope="col" class="px-4 py-3 text-left">Customer</th>
            <th scope="col" class="px-4 py-3 text-left">Rating</th>
            <th scope="col" class="px-4 py-3 text-left">Comment</th>
            <th scope="col" class="px-4 py-3 text-left">Status</th>
            <th scope="col" class="px-4 py-3 text-left">Submitted</th>
            <th scope="col" class="px-4 py-3 text-right">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% preserved_params = { query: @query.presence, status: @status_filter.presence, page: params[:page].presence }.compact %>
          <% @reviews.each do |review| %>
            <tr class="hover:bg-indigo-50/40">
              <td class="px-4 py-3">
                <div class="flex flex-col gap-1">
                  <span class="font-semibold text-slate-900"><%= review.product.name %></span>
                  <%= link_to "View product", admin_product_path(review.product), class: "text-xs font-semibold text-indigo-600 hover:text-indigo-500" %>
                </div>
              </td>
              <td class="px-4 py-3">
                <div class="flex flex-col">
                  <span class="font-semibold text-slate-900"><%= review.user.name %></span>
                  <span class="text-xs text-slate-400"><%= review.user.email %></span>
                </div>
              </td>
              <td class="px-4 py-3">
                <div class="flex items-center gap-2">
                  <span class="text-base"><%= render_rating_stars(review.rating) %></span>
                  <span class="text-xs font-semibold text-slate-500"><%= review.rating %>/5</span>
                </div>
              </td>
              <td class="px-4 py-3">
                <% if review.comment.present? %>
                  <p class="max-w-xs text-slate-600"><%= truncate(review.comment, length: 120) %></p>
                <% else %>
                  <span class="text-xs italic text-slate-400">No comment</span>
                <% end %>
              </td>
              <td class="px-4 py-3">
                <% if review.hidden? %>
                  <span class="inline-flex items-center rounded-full bg-amber-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-amber-700">Hidden</span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-emerald-700">Visible</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-sm text-slate-500"><%= review.created_at.strftime("%b %-d, %Y %H:%M") %></td>
              <td class="px-4 py-3 text-right">
                <div class="inline-flex flex-wrap items-center justify-end gap-2 text-xs font-semibold">
                  <%= button_to(review.hidden? ? "Show" : "Hide",
                                admin_review_path(review),
                                method: :patch,
                                params: preserved_params.merge(visibility: review.hidden? ? "show" : "hide"),
                                class: "rounded-full border border-slate-200 px-3 py-1 text-slate-600 transition hover:border-indigo-200 hover:text-indigo-600",
                                form: { class: "inline" },
                                data: { turbo_confirm: review.hidden? ? "Make this review visible?" : "Hide this review?" }) %>
                  <%= button_to "Delete",
                                admin_review_path(review),
                                method: :delete,
                                params: preserved_params,
                                class: "rounded-full border border-red-200 bg-red-50 px-3 py-1 text-red-600 transition hover:bg-red-100",
                                form: { class: "inline" },
                                data: { turbo_confirm: "Delete this review permanently?" }) %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="rounded-3xl border border-dashed border-slate-200 bg-white px-6 py-12 text-center text-sm text-slate-500 shadow-sm">
      No reviews found for your current filters.
    </div>
  <% end %>

  <%= render "shared/pagination", pagy: @pagy %>
</div>
