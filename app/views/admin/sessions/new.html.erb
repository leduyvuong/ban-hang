<div class="w-full space-y-6 rounded-3xl border border-gray-200 bg-white p-8 shadow-sm">
  <header class="space-y-2 text-center">
    <h1 class="text-2xl font-semibold text-gray-900">Admin Portal</h1>
    <p class="text-sm text-gray-500">Sign in with your admin credentials to continue.</p>
  </header>

  <%= render "shared/form_errors", object: @session_form %>

  <%= form_with model: @session_form, url: admin_login_path, method: :post, class: "space-y-5" do |form| %>
    <div class="space-y-1">
      <%= form.label :email, class: "text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, autofocus: true, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 #{error_class(@session_form, :email)}" %>
      <%= field_error(@session_form, :email) %>
    </div>

    <div class="space-y-1">
      <%= form.label :password, class: "text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, required: true, class: "w-full rounded-2xl border border-gray-200 px-4 py-2 text-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100 #{error_class(@session_form, :password)}" %>
      <%= field_error(@session_form, :password) %>
    </div>

    <%= form.submit "Log in", class: "w-full rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow transition hover:bg-indigo-500", data: { disable_with: "Signing in..." } %>
  <% end %>

  <div class="text-center text-xs text-gray-400">
    <%= link_to "Back to store", root_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>
