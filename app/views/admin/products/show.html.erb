<div class="grid gap-6 lg:grid-cols-[2fr_1fr]">
  <div class="space-y-6">
    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
        <div class="flex flex-wrap items-start justify-between gap-4">
          <div>
            <% if @product.category.present? %>
              <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-indigo-600"><%= @product.category.name %></span>
            <% end %>
            <h2 class="text-xl font-semibold text-slate-900"><%= @product.name %></h2>
            <% if @product.short_description.present? %>
              <p class="text-sm text-slate-500"><%= @product.short_description %></p>
            <% end %>
          </div>
        <div class="text-2xl font-semibold text-indigo-600"><%= number_to_currency(@product.price) %></div>
      </div>
      <% if @product.description.present? %>
        <div class="mt-4 prose prose-slate max-w-none">
          <%= simple_format(@product.description) %>
        </div>
      <% end %>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900">Inventory notes</h3>
      <p class="mt-2 text-sm text-slate-500">Use this space to jot down details on stock levels, suppliers, or launch plans.</p>
      <div class="mt-4 rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
        No internal notes yet. Add some into your ERP / inventory system.
      </div>
    </div>
  </div>

  <aside class="space-y-6">
    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900">Preview</h3>
      <div class="mt-4 overflow-hidden rounded-2xl border border-slate-200 bg-slate-50">
        <% if @product.image_url.present? %>
          <img src="<%= @product.image_url %>" alt="<%= @product.name %>" class="h-48 w-full object-cover">
        <% else %>
          <div class="flex h-48 items-center justify-center text-sm text-slate-400">No product image</div>
        <% end %>
      </div>
      <div class="mt-4 space-y-2 text-sm text-slate-500">
        <div class="flex items-center justify-between">
          <span>Slug</span>
          <code class="rounded-full bg-slate-100 px-3 py-1 text-xs text-slate-600"><%= @product.slug %></code>
        </div>
        <div class="flex items-center justify-between">
          <span>Created</span>
          <span><%= @product.created_at.strftime("%b %-d, %Y") %></span>
        </div>
        <div class="flex items-center justify-between">
          <span>Updated</span>
          <span><%= @product.updated_at.strftime("%b %-d, %Y") %></span>
        </div>
      </div>
      <div class="mt-4 space-y-2 text-sm text-indigo-600">
        <%= link_to "Edit product", edit_admin_product_path(@product), class: "inline-flex w-full items-center justify-center rounded-full border border-indigo-200 px-4 py-2 font-semibold transition hover:border-indigo-300 hover:text-indigo-500" %>
        <%= button_to "Delete product", admin_product_path(@product), method: :delete, data: { turbo_confirm: "Delete #{@product.name}?" }, class: "inline-flex w-full items-center justify-center rounded-full border border-red-200 bg-red-50 px-4 py-2 font-semibold text-red-600 transition hover:bg-red-100" %>
      </div>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900">Search preview</h3>
      <div class="mt-3 rounded-2xl border border-slate-200 bg-slate-50 p-4 text-sm">
        <p class="text-indigo-700 underline hover:text-indigo-600"><%= @product.name %> | BanHang</p>
        <p class="text-slate-500"><%= @product.short_description.presence || truncate(strip_tags(@product.description.to_s), length: 150) %></p>
        <span class="text-xs text-slate-400">https://yourstore.example.com/products/<%= @product.slug %></span>
      </div>
    </div>
  </aside>
</div>
