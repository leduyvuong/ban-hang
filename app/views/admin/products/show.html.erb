<div class="grid gap-6 lg:grid-cols-[2fr_1fr]">
  <div class="space-y-6">
    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
        <div class="flex flex-wrap items-start justify-between gap-4">
          <div>
            <% if @product.category.present? %>
              <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-indigo-600"><%= @product.category.name %></span>
            <% end %>
            <h2 class="text-xl font-semibold text-slate-900"><%= @product.name %></h2>
            <% if @product.short_description.present? %>
              <p class="text-sm text-slate-500"><%= @product.short_description %></p>
            <% end %>
          </div>
        <div class="text-right">
          <% if @product.discounted? %>
            <div class="text-right space-y-1">
              <span class="inline-flex items-center rounded-full bg-emerald-100 px-2 py-0.5 text-[11px] font-semibold uppercase tracking-wide text-emerald-700"><%= @product.discount_badge_label(currency: current_currency) %></span>
              <div class="text-2xl font-semibold text-emerald-600"><%= format_money(@product.discounted_price) %></div>
              <div class="text-sm text-slate-400 line-through"><%= format_money(@product.price) %></div>
              <% if @product.price_currency.present? && @product.price_currency != current_currency %>
                <div class="text-xs text-slate-500">Original price: <%= format_money_from(@product.price_local_amount, from_currency: @product.price_currency, to_currency: @product.price_currency) %></div>
              <% end %>
            </div>
          <% elsif @product.discount.present? %>
            <div class="text-sm text-slate-500 space-y-1">
              <span class="inline-flex items-center rounded-full bg-amber-100 px-2 py-0.5 text-[11px] font-semibold uppercase tracking-wide text-amber-700">Scheduled discount</span>
              <div class="mt-1 text-2xl font-semibold text-indigo-600"><%= format_money(@product.price) %></div>
              <% if @product.price_currency.present? && @product.price_currency != current_currency %>
                <div class="text-xs text-slate-500">Original price: <%= format_money_from(@product.price_local_amount, from_currency: @product.price_currency, to_currency: @product.price_currency) %></div>
              <% end %>
            </div>
          <% else %>
            <div class="space-y-1 text-right">
              <div class="text-2xl font-semibold text-indigo-600"><%= format_money(@product.price) %></div>
              <% if @product.price_currency.present? && @product.price_currency != current_currency %>
                <div class="text-xs text-slate-500">Original price: <%= format_money_from(@product.price_local_amount, from_currency: @product.price_currency, to_currency: @product.price_currency) %></div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <% if @product.description.present? %>
        <div class="mt-4 prose prose-slate max-w-none">
          <%= simple_format(@product.description) %>
        </div>
      <% end %>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900">Inventory notes</h3>
      <p class="mt-2 text-sm text-slate-500">Use this space to jot down details on stock levels, suppliers, or launch plans.</p>
      <div class="mt-4 rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
        No internal notes yet. Add some into your ERP / inventory system.
      </div>
    </div>
  </div>

  <aside class="space-y-6">
    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900">Preview</h3>
      <div class="mt-4 overflow-hidden rounded-2xl border border-slate-200 bg-slate-50">
        <% if (thumb = @product.image_variant(width: 480, height: 320)) %>
          <%= image_tag thumb, alt: @product.name, class: "h-48 w-full object-cover", loading: "lazy" %>
        <% else %>
          <div class="flex h-48 items-center justify-center text-sm text-slate-400">No product image</div>
        <% end %>
      </div>
      <div class="mt-4 space-y-2 text-sm text-slate-500">
        <div class="flex items-center justify-between">
          <span>Slug</span>
          <code class="rounded-full bg-slate-100 px-3 py-1 text-xs text-slate-600"><%= @product.slug %></code>
        </div>
        <div class="flex items-center justify-between">
          <span>Created</span>
          <span><%= @product.created_at.strftime("%b %-d, %Y") %></span>
        </div>
        <div class="flex items-center justify-between">
          <span>Updated</span>
          <span><%= @product.updated_at.strftime("%b %-d, %Y") %></span>
        </div>
      </div>
      <div class="mt-4 space-y-2 text-sm text-indigo-600">
        <%= link_to "Edit product", edit_admin_product_path(@product), class: "inline-flex w-full items-center justify-center rounded-full border border-indigo-200 px-4 py-2 font-semibold transition hover:border-indigo-300 hover:text-indigo-500" %>
        <%= button_to "Delete product", admin_product_path(@product), method: :delete, data: { turbo_confirm: "Delete #{@product.name}?" }, class: "inline-flex w-full items-center justify-center rounded-full border border-red-200 bg-red-50 px-4 py-2 font-semibold text-red-600 transition hover:bg-red-100" %>
      </div>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900">Discount assignment</h3>
      <% if @product.discount.present? %>
        <div class="mt-3 space-y-3 rounded-2xl border border-slate-200 bg-slate-50 p-4 text-sm text-slate-600">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-base font-semibold text-slate-900"><%= @product.discount.name %></p>
              <p class="text-xs text-slate-500"><%= @product.discount.formatted_value(currency: current_currency) %></p>
            </div>
            <%= discount_status_badge(@product.discount) %>
          </div>
          <dl class="space-y-1 text-xs text-slate-500">
            <div class="flex items-center justify-between">
              <dt>Starts</dt>
              <dd><%= @product.discount.start_date.present? ? l(@product.discount.start_date, format: :short) : "Immediate" %></dd>
            </div>
            <div class="flex items-center justify-between">
              <dt>Ends</dt>
              <dd><%= @product.discount.end_date.present? ? l(@product.discount.end_date, format: :short) : "Open-ended" %></dd>
            </div>
          </dl>
          <% if @product.discounted? %>
            <p class="rounded-xl bg-emerald-100 px-3 py-2 text-xs font-semibold text-emerald-700">Live now — customers pay <%= format_money(@product.discounted_price) %></p>
          <% else %>
            <p class="rounded-xl bg-amber-100 px-3 py-2 text-xs font-semibold text-amber-700">Scheduled or inactive — customers pay <%= format_money(@product.price) %> until it activates.</p>
          <% end %>
        </div>
      <% else %>
        <div class="mt-3 rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
          No discount assigned. Edit this product to attach one.
        </div>
      <% end %>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900">Search preview</h3>
      <div class="mt-3 rounded-2xl border border-slate-200 bg-slate-50 p-4 text-sm">
        <p class="text-indigo-700 underline hover:text-indigo-600"><%= @product.name %> | BanHang</p>
        <p class="text-slate-500"><%= @product.short_description.presence || truncate(strip_tags(@product.description.to_s), length: 150) %></p>
        <span class="text-xs text-slate-400">https://yourstore.example.com/products/<%= @product.slug %></span>
      </div>
    </div>
  </aside>
</div>
