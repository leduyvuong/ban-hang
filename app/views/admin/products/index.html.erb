<div class="space-y-6">
  <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-wrap items-center justify-between gap-4">
      <div>
        <h2 class="text-lg font-semibold text-slate-900">Product catalogue</h2>
        <p class="text-sm text-slate-500">Manage pricing, descriptions, and availability.</p>
      </div>
      <%= link_to "Add product", new_admin_product_path, class: "inline-flex items-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500" %>
    </div>

    <% if @products.any? %>
      <div class="mt-6 overflow-hidden rounded-2xl border border-slate-200">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr class="text-xs uppercase tracking-wide text-slate-500">
              <th scope="col" class="px-4 py-3 text-left">Product</th>
              <th scope="col" class="px-4 py-3 text-left">Price</th>
              <th scope="col" class="px-4 py-3 text-left">Created</th>
              <th scope="col" class="px-4 py-3 text-right">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100 bg-white text-sm text-slate-600">
            <% @products.each do |product| %>
              <tr class="hover:bg-indigo-50/40">
                <td class="px-4 py-3">
                  <div class="flex items-center gap-3">
                    <div class="h-12 w-12 overflow-hidden rounded-xl bg-slate-100">
                      <% if product.image_url.present? %>
                        <img src="<%= product.image_url %>" alt="<%= product.name %>" class="h-full w-full object-cover">
                      <% else %>
                        <div class="flex h-full items-center justify-center text-xs text-slate-400">No image</div>
                      <% end %>
                    </div>
                    <div>
                      <% if product.category.present? %>
                        <span class="inline-flex items-center rounded-full bg-indigo-50 px-2.5 py-1 text-[10px] font-semibold uppercase tracking-wide text-indigo-600"><%= product.category.name %></span>
                      <% end %>
                      <p class="font-semibold text-slate-900"><%= product.name %></p>
                      <p class="text-xs text-slate-500 truncate max-w-[220px]"><%= product.short_description || truncate(product.description, length: 80) %></p>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-3 align-middle font-semibold text-slate-900"><%= number_to_currency(product.price) %></td>
                <td class="px-4 py-3 align-middle text-xs text-slate-500"><%= product.created_at.strftime("%b %-d, %Y") %></td>
                <td class="px-4 py-3 align-middle text-right">
                  <div class="inline-flex items-center gap-2 text-xs font-semibold">
                    <%= link_to "View", admin_product_path(product), class: "rounded-full border border-slate-200 px-3 py-1 text-slate-600 hover:border-indigo-200 hover:text-indigo-600" %>
                    <%= link_to "Edit", edit_admin_product_path(product), class: "rounded-full border border-indigo-100 bg-indigo-50 px-3 py-1 text-indigo-700 hover:bg-indigo-100" %>
                    <%= button_to "Delete", admin_product_path(product), method: :delete, data: { turbo_confirm: "Delete #{product.name}?" }, class: "rounded-full border border-red-100 bg-red-50 px-3 py-1 text-red-600 hover:bg-red-100" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="mt-6 rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-10 text-center text-sm text-slate-500">
        No products yet. Start by adding your first product.
      </div>
    <% end %>
  </div>
</div>
