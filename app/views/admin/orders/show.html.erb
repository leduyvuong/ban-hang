<div class="grid gap-6 lg:grid-cols-[2fr_1fr]">
  <section class="space-y-6">
    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <div class="flex flex-wrap items-start justify-between gap-4">
        <div>
          <h2 class="text-xl font-semibold text-slate-900">Order <span class="text-indigo-600">#<%= @order.order_number %></span></h2>
          <p class="text-sm text-slate-500">Placed <%= time_ago_in_words(@order.placed_at || @order.created_at || Time.current) %> ago</p>
        </div>
        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-600"><%= @order.status %></span>
      </div>
      <div class="mt-6 space-y-2 text-sm text-slate-600">
        <div class="flex items-center justify-between">
          <span>Order total</span>
          <span class="text-lg font-semibold text-slate-900"><%= number_to_currency(@order.total) %></span>
        </div>
        <div class="flex items-center justify-between text-xs text-slate-500">
          <span>Created</span>
          <span><%= @order.created_at&.strftime("%b %-d, %Y %H:%M %Z") %></span>
        </div>
        <div class="flex items-center justify-between text-xs text-slate-500">
          <span>Updated</span>
          <span><%= @order.updated_at&.strftime("%b %-d, %Y %H:%M %Z") %></span>
        </div>
      </div>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900">Line items</h3>
      <div class="mt-4 rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
        Line items would be displayed here once order integration is complete.
      </div>
    </div>
  </section>

  <aside class="space-y-6">
    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900">Customer info</h3>
      <div class="mt-3 rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
        Populate this section with customer shipping and billing details.
      </div>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <h3 class="text-lg font-semibold text-slate-900">Notes</h3>
      <p class="mt-2 text-sm text-slate-500">Use this space for internal communication on fulfillment steps.</p>
      <div class="mt-4 rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500">
        No notes yet. Add in your fulfilment tool.
      </div>
    </div>
  </aside>
</div>
