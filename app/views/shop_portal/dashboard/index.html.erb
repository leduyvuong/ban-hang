<main class="mx-auto max-w-5xl space-y-8 px-4 py-10">
  <header class="space-y-2">
    <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-gray-600">Quick overview for <%= shop.name %>.</p>
  </header>

  <section class="grid gap-4 md:grid-cols-3">
    <div class="rounded-3xl border border-gray-200 bg-white p-6 shadow-sm">
      <p class="text-sm text-gray-500">Products</p>
      <p class="mt-2 text-3xl font-bold text-indigo-600"><%= @products_count %></p>
    </div>
    <div class="rounded-3xl border border-gray-200 bg-white p-6 shadow-sm">
      <p class="text-sm text-gray-500">Categories</p>
      <p class="mt-2 text-3xl font-bold text-indigo-600"><%= @categories_count %></p>
    </div>
    <div class="rounded-3xl border border-gray-200 bg-white p-6 shadow-sm">
      <p class="text-sm text-gray-500">Status</p>
      <p class="mt-2 text-3xl font-bold text-indigo-600"><%= shop.status.humanize %></p>
    </div>
  </section>

  <section class="space-y-4">
    <h2 class="text-2xl font-semibold text-gray-900">Recent products</h2>
    <% if @recent_products.present? %>
      <div class="rounded-3xl border border-gray-200 bg-white">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Name</th>
              <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Category</th>
              <th class="px-4 py-3 text-right text-xs font-semibold uppercase tracking-wide text-gray-500">Price</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @recent_products.each do |product| %>
              <tr>
                <td class="px-4 py-3 text-sm text-gray-900"><%= product.name %></td>
                <td class="px-4 py-3 text-sm text-gray-500"><%= product.category&.name || "â€”" %></td>
                <td class="px-4 py-3 text-right text-sm font-semibold text-indigo-600"><%= format_money(product.price) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-sm text-gray-500">Add your first product to see it here.</p>
    <% end %>
  </section>
</main>
