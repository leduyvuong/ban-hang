<main class="mx-auto max-w-5xl space-y-6 px-4 py-10">
  <header class="space-y-2">
    <h1 class="text-3xl font-bold text-gray-900">Categories</h1>
    <p class="text-gray-600">Category list for <%= shop.name %>.</p>
  </header>

  <% if @categories.present? %>
    <div class="overflow-hidden rounded-3xl border border-gray-200 bg-white">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Name</th>
            <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Slug</th>
            <th class="px-4 py-3 text-right text-xs font-semibold uppercase tracking-wide text-gray-500">Products</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @categories.each do |category| %>
            <tr>
              <td class="px-4 py-3 text-sm font-medium text-gray-900"><%= category.name %></td>
              <td class="px-4 py-3 text-sm text-gray-500"><%= category.slug %></td>
              <td class="px-4 py-3 text-right text-sm text-gray-500"><%= category.products.size %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-sm text-gray-500">No categories yet.</p>
  <% end %>
</main>
