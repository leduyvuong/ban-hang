<% return if flash.empty? %>
<aside class="fixed top-4 right-4 z-50 flex w-full max-w-xs flex-col gap-3 sm:max-w-sm">
  <% flash.each do |type, messages| %>
    <% Array(messages).each do |message| %>
      <% next if message.blank? %>
      <% variant = case type.to_sym
      when :notice then { wrapper: "border-sky-200 bg-sky-100 text-sky-800", icon: "text-sky-500", title: "Notice" }
      when :success then { wrapper: "border-emerald-200 bg-emerald-100 text-emerald-800", icon: "text-emerald-500", title: "Success" }
      when :alert then { wrapper: "border-amber-200 bg-amber-100 text-amber-800", icon: "text-amber-500", title: "Alert" }
      when :error then { wrapper: "border-rose-200 bg-rose-100 text-rose-800", icon: "text-rose-500", title: "Error" }
      else { wrapper: "border-gray-200 bg-gray-100 text-gray-800", icon: "text-gray-500", title: type.to_s.titleize }
      end %>
      <div class="pointer-events-auto overflow-hidden rounded-2xl border shadow-lg transition duration-300 ease-out <%= variant[:wrapper] %>" data-controller="flash" data-flash-timeout-value="5000" role="alert">
        <div class="flex items-start gap-3 px-4 py-3">
          <div class="mt-0.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 <%= variant[:icon] %>" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75M12 15.75h.007v.008H12v-.008z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="flex-1 space-y-1 text-sm">
            <p class="font-semibold"><%= variant[:title] %></p>
            <p class="leading-snug"><%= message %></p>
          </div>
          <button type="button" data-action="flash#dismiss" class="rounded-full bg-white/40 p-1 text-xs font-semibold uppercase tracking-wide text-current transition hover:bg-white/60">
            &times;
          </button>
        </div>
      </div>
    <% end %>
  <% end %>
</aside>
