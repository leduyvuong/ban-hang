<% return if @featured_products.blank? %>
<section class="space-y-6">
  <div class="flex flex-wrap items-end justify-between gap-4">
    <div>
      <h2 class="text-2xl font-semibold text-gray-900">Trending Now</h2>
      <p class="text-sm text-gray-500">Hand-picked products customers love right now.</p>
    </div>
    <% listing_path = current_shop.present? ? shop_products_path(current_shop) : products_path %>
    <%= link_to "View all products", listing_path, class: "inline-flex items-center gap-2 text-sm font-semibold text-indigo-600 transition hover:text-indigo-500" %>
  </div>

  <div class="grid gap-6 sm:grid-cols-2 xl:grid-cols-3">
    <% @featured_products.each do |product| %>
      <% cache(product) do %>
        <article class="group flex flex-col overflow-hidden rounded-3xl border border-gray-200 bg-white shadow-sm transition hover:-translate-y-1 hover:shadow-xl">
          <div class="relative h-56 w-full overflow-hidden bg-gray-100">
            <% if (thumb = product.thumbnail(width: 600, height: 360)) %>
              <%= image_tag thumb, alt: product.name, class: "h-full w-full object-cover transition duration-500 group-hover:scale-105", loading: "lazy" %>
            <% else %>
              <div class="flex h-full items-center justify-center bg-gray-100 text-sm text-gray-400">No image</div>
            <% end %>
            <% if product.discounted? %>
              <span class="absolute left-4 top-4 inline-flex items-center rounded-full bg-emerald-500 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-white shadow"><%= product.discount_badge_label(currency: current_currency) %></span>
            <% elsif product.category.present? %>
              <span class="absolute left-4 top-4 inline-flex items-center rounded-full bg-white/90 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-indigo-600 shadow-sm"><%= product.category.name %></span>
            <% end %>
            <span class="absolute right-4 top-4 inline-flex items-center gap-1 rounded-full bg-black/60 px-2 py-1 text-[11px] font-medium text-white">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.033a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.033a1 1 0 00-1.175 0l-2.8 2.033c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              4.8
            </span>
          </div>

          <div class="flex flex-1 flex-col gap-4 p-6">
            <div class="space-y-2">
              <% if product.category.present? %>
                <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-indigo-600"><%= product.category.name %></span>
              <% end %>
              <h3 class="text-lg font-semibold text-gray-900"><%= product.name %></h3>
              <p class="text-sm text-gray-600"><%= truncate(product.short_description.presence || product.description, length: 110) %></p>
            </div>
            <div class="mt-auto space-y-4">
              <% if product.discounted? %>
                <div class="flex flex-col gap-1">
                  <span class="text-2xl font-bold text-emerald-600"><%= format_money(product.discounted_price) %></span>
                  <span class="text-sm text-gray-400 line-through"><%= format_money(product.price) %></span>
                  <span class="text-xs font-semibold uppercase tracking-wide text-emerald-600">You save <%= format_money(product.discount_amount) %></span>
                </div>
              <% else %>
                <p class="text-xl font-bold text-indigo-600"><%= format_money(product.price) %></p>
              <% end %>
              <div class="flex flex-wrap gap-3">
                <%= link_to "View Details", product_path(product), class: "inline-flex items-center justify-center rounded-full border border-indigo-200 px-4 py-2 text-sm font-semibold text-indigo-600 transition hover:border-indigo-300 hover:text-indigo-700" %>
                <% if product.stock.to_i.zero? %>
                  <span class="inline-flex items-center justify-center rounded-full bg-gray-200 px-4 py-2 text-sm font-semibold uppercase tracking-wide text-gray-500">Out of Stock</span>
                <% else %>
                  <button type="button" data-action="click->cart#addItem" data-cart-product-id-param="<%= product.to_param %>" data-cart-quantity-param="1" data-product-id="<%= product.to_param %>" data-quantity="1" class="inline-flex items-center justify-center rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow transition hover:bg-indigo-500">Add to Cart</button>
                <% end %>
              </div>
            </div>
          </div>
        </article>
      <% end %>
    <% end %>
  </div>
</section>
