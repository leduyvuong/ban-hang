    <div class="absolute bottom-12 left-4 right-4 md:bottom-24 md:left-8 lg:left-16 lg:max-w-xl">
      <div class="flex flex-col gap-6 text-white">
        <h1 class="text-5xl font-bold tracking-tight text-white md:text-6xl lg:text-7xl">Khám Phá Bộ Sưu Tập Mới</h1>
        <div class="w-full md:w-auto">
          <%= link_to "Explore Now", products_path, class: "inline-flex w-full items-center justify-center border-2 border-white px-12 py-4 text-sm font-semibold uppercase tracking-wide text-white transition-all duration-300 hover:bg-white hover:text-black md:w-auto" %>
        </div>
      </div>
    </div>
    <div class="pointer-events-none absolute bottom-8 left-1/2 flex -translate-x-1/2 flex-col items-center text-white">
      <span class="text-xs uppercase tracking-[0.3em] text-white/80">Scroll</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="mt-2 h-6 w-6 animate-bounce" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25 12 15.75 4.5 8.25" />
      </svg>
    </div>
  </section>

  <section aria-labelledby="brand-intro" class="border-t border-gray-200 bg-white py-12 md:py-20">
    <div class="mx-auto flex max-w-4xl flex-col items-center gap-6 px-4 text-center">
      <span aria-hidden="true" class="text-3xl text-[#d4a574]">✦</span>
      <h2 id="brand-intro" class="text-2xl font-semibold text-gray-900 md:text-3xl">Crafted for those who appreciate quality</h2>
      <p class="text-lg font-normal leading-relaxed text-gray-600">Chúng tôi tin rằng sự tinh giản cùng chất liệu đỉnh cao sẽ tạo nên những khoảnh khắc đáng nhớ trong cuộc sống thường nhật.</p>
    </div>
  </section>

  <section id="collection" aria-labelledby="collection-heading" class="bg-white">
    <% showcase_items.each_with_index do |item, index| %>
      <% background_class = index.even? ? "bg-white" : "bg-[#faf8f6]" %>
      <% image_order_classes = index.odd? ? "order-1 md:order-2" : "order-1 md:order-1" %>
      <% text_order_classes = index.odd? ? "order-2 md:order-1" : "order-2 md:order-2" %>
      <article class="#{background_class}">
        <div class="grid grid-cols-1 md:grid-cols-5">
          <% if item[:product] %>
            <% product = item[:product] %>
            <% product_image = product.image.attached? ? product.image.variant(resize_to_fill: [1200, 1500]) : fallback_product_images[index % fallback_product_images.length] %>
            <figure class="group relative <%= image_order_classes %> md:col-span-3">
              <div class="h-80 w-full overflow-hidden md:h-screen">
                <%= image_tag product_image, alt: product.name, class: "h-full w-full object-cover transition-transform duration-500 group-hover:scale-105", loading: "lazy" %>
              </div>
            </figure>
            <div class="<%= text_order_classes %> flex flex-col justify-center bg-[#faf8f6] px-4 py-8 md:col-span-2 md:px-12 md:py-0">
              <p class="text-xs font-semibold uppercase tracking-[0.3em] text-gray-500"><%= product.category&.name || "New Arrival" %></p>
              <h3 class="mt-6 text-4xl font-bold text-gray-900 md:text-5xl"><%= product.name %></h3>
              <p class="mt-4 text-lg text-gray-600 leading-relaxed"><%= product.short_description.presence || truncate(product.description.to_s, length: 160) %></p>
              <p class="mt-6 text-3xl font-bold text-gray-900"><%= format_money(product.discounted? ? product.discounted_price : product.price) %></p>
              <div class="mt-8">
                <%= link_to "View Collection", product_path(product), class: "inline-block border-b-2 border-gray-900 pb-2 text-sm font-semibold uppercase tracking-wide text-gray-900 transition-colors duration-300 hover:border-[#d4a574] hover:text-[#d4a574]" %>
              </div>
            </div>
          <% else %>
            <% fallback = item[:fallback] %>
            <figure class="group relative <%= image_order_classes %> md:col-span-3">
              <div class="h-80 w-full overflow-hidden md:h-screen">
                <%= image_tag fallback[:image], alt: fallback[:name], class: "h-full w-full object-cover transition-transform duration-500 group-hover:scale-105", loading: "lazy" %>
              </div>
            </figure>
            <div class="<%= text_order_classes %> flex flex-col justify-center bg-[#faf8f6] px-4 py-8 md:col-span-2 md:px-12 md:py-0">
              <p class="text-xs font-semibold uppercase tracking-[0.3em] text-gray-500"><%= fallback[:category] %></p>
              <h3 class="mt-6 text-4xl font-bold text-gray-900 md:text-5xl"><%= fallback[:name] %></h3>
              <p class="mt-4 text-lg text-gray-600 leading-relaxed"><%= fallback[:description] %></p>
              <p class="mt-6 text-3xl font-bold text-gray-900"><%= fallback[:price] %></p>
              <div class="mt-8">
                <%= link_to "View Collection", fallback[:path], class: "inline-block border-b-2 border-gray-900 pb-2 text-sm font-semibold uppercase tracking-wide text-gray-900 transition-colors duration-300 hover:border-[#d4a574] hover:text-[#d4a574]" %>
              </div>
            </div>
          <% end %>
        </div>
      </article>
    <% end %>
  </section>

  <section id="categories" aria-labelledby="category-heading" class="bg-white py-16 md:py-24">
    <div class="mx-auto max-w-7xl px-4">
      <div class="flex flex-col items-start gap-4 md:flex-row md:items-end md:justify-between">
        <div>
          <h2 id="category-heading" class="text-3xl font-bold text-gray-900 md:text-4xl">Danh mục chọn lọc</h2>
          <p class="mt-2 text-lg text-gray-600">Khám phá các thế giới phong cách được tuyển chọn tinh tế dành riêng cho bạn.</p>
        </div>
        <%= link_to "View all", products_path, class: "inline-flex items-center gap-2 border-b border-gray-900 pb-1 text-sm font-semibold uppercase tracking-wide text-gray-900 transition-colors duration-300 hover:border-[#d4a574] hover:text-[#d4a574]" %>
      </div>
      <div class="mt-12 grid auto-rows-[200px] grid-cols-2 gap-4 md:auto-rows-[240px] md:grid-cols-3 lg:auto-rows-[280px] lg:grid-cols-4">
        <% layout_classes = ["col-span-2 row-span-2", "", "", "col-span-2", "", ""] %>
        <% category_cards.each_with_index do |card, index| %>
          <% layout = layout_classes[index] || "" %>
          <article class="group relative flex h-full w-full overflow-hidden bg-gray-900 text-white <%= layout %>">
            <%= image_tag card[:image], alt: "#{card[:name]} category inspiration", class: "absolute inset-0 h-full w-full object-cover transition-transform duration-500 group-hover:scale-105", loading: "lazy" %>
            <div class="absolute inset-0 bg-black/20 transition-all duration-300 group-hover:bg-black/40"></div>
            <div class="relative z-10 flex h-full w-full flex-col items-center justify-center gap-3 px-4 text-center md:opacity-0 md:group-hover:opacity-100">
              <h3 class="text-2xl font-semibold md:text-3xl"><%= card[:name] %></h3>
              <p class="text-lg text-gray-200"><%= card[:tagline] %></p>
              <%= link_to "Discover", card[:path], class: "inline-flex items-center gap-2 text-sm font-semibold uppercase tracking-wide text-white transition-colors duration-300 hover:text-[#d4a574]" %>
            </div>
            <div class="relative z-10 flex h-full w-full items-end justify-start px-4 py-4 md:hidden">
              <div class="space-y-1 text-left">
                <h3 class="text-xl font-semibold"><%= card[:name] %></h3>
                <p class="text-sm text-gray-200"><%= card[:tagline] %></p>
              </div>
            </div>
          </article>
        <% end %>
      </div>
    </div>
  </section>

  <section id="featured-collection" class="bg-[#faf8f6] py-16 md:py-24">
    <div class="mx-auto max-w-7xl px-4">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold text-gray-900 md:text-4xl">Featured Collection</h2>
        <p class="mt-3 text-lg text-gray-600">Handpicked products</p>
      </div>
      <div class="mt-12 columns-1 gap-4 md:columns-2 lg:columns-3 xl:columns-4">
        <% collection_items = featured_collection.presence || [] %>
        <% if collection_items.empty? %>
          <% fallback_collection.each do |item| %>
            <article class="mb-4 break-inside-avoid">
              <div class="group relative overflow-hidden">
                <%= image_tag item[:image], alt: item[:name], class: "w-full object-cover transition-transform duration-500 group-hover:scale-105", loading: "lazy" %>
                <div class="absolute inset-0 flex flex-col items-center justify-center gap-3 bg-black/60 opacity-0 transition-opacity duration-300 group-hover:opacity-100 md:opacity-0">
                  <h3 class="text-2xl font-bold text-white"><%= item[:name] %></h3>
                  <p class="text-xl text-gray-300"><%= item[:price] %></p>
                  <%= link_to "Add to Cart", products_path, class: "inline-flex items-center justify-center bg-white px-6 py-2 text-sm font-semibold uppercase tracking-wide text-black transition-colors duration-300 hover:bg-gray-200" %>
                </div>
                <div class="absolute inset-0 flex flex-col items-center justify-center gap-3 bg-black/30 md:hidden">
                  <h3 class="text-xl font-bold text-white"><%= item[:name] %></h3>
                  <p class="text-base text-gray-200"><%= item[:price] %></p>
                </div>
              </div>
            </article>
          <% end %>
        <% else %>
