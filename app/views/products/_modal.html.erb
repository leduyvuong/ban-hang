<div class="fixed inset-0 z-50 flex items-center justify-center px-4 py-10 sm:px-6" data-product-modal-target="overlay" data-action="keydown.escape->product-modal#close">
  <div class="absolute inset-0 bg-gray-900/70 backdrop-blur-sm" data-product-modal-target="backdrop" data-action="click->product-modal#close"></div>
  <div class="relative max-h-full w-full max-w-2xl overflow-hidden rounded-3xl bg-white shadow-2xl ring-1 ring-black/5" role="dialog" aria-modal="true" aria-labelledby="product-modal-title" data-product-modal-target="panel">
    <button type="button" class="absolute right-5 top-5 inline-flex items-center justify-center rounded-full bg-gray-100 p-2 text-gray-500 transition hover:bg-gray-200 hover:text-gray-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2" aria-label="Close quick view" data-action="product-modal#close">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 6.75l10.5 10.5m0-10.5-10.5 10.5" />
      </svg>
    </button>

    <div class="grid gap-6 p-6 sm:grid-cols-[1fr_1fr] sm:p-8">
      <div class="relative overflow-hidden rounded-2xl bg-gray-100">
        <% if (thumb = product.image_variant(width: 640, height: 400)) %>
          <%= image_tag thumb, alt: product.name, class: "h-full w-full object-cover", loading: "lazy" %>
        <% else %>
          <div class="flex h-full min-h-[220px] items-center justify-center text-gray-400">
            <span>No image available</span>
          </div>
        <% end %>
        <% if product.discounted? %>
          <span class="absolute left-4 top-4 inline-flex items-center rounded-full bg-emerald-500 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-white shadow-sm">
            <%= product.discount_badge_label(currency: current_currency) %>
          </span>
        <% end %>
      </div>

      <div class="space-y-4">
        <header class="space-y-2">
          <% if product.category.present? %>
            <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-indigo-600"><%= product.category.name %></span>
          <% end %>
          <h2 id="product-modal-title" class="text-2xl font-semibold text-gray-900"><%= product.name %></h2>
          <% if product.short_description.present? %>
            <p class="text-sm text-gray-600"><%= product.short_description %></p>
          <% end %>
         <% if product.discounted? %>
           <div class="flex items-baseline gap-2">
             <p class="text-2xl font-bold text-emerald-600"><%= format_money(product.discounted_price) %></p>
             <p class="text-sm text-gray-400 line-through"><%= format_money(product.price) %></p>
           </div>
           <p class="text-xs font-semibold uppercase tracking-wide text-emerald-700"><%= product.discount_badge_label(currency: current_currency) %></p>
            <% if product.price_currency.present? && product.price_currency != current_currency %>
              <p class="text-xs text-gray-500">Original price: <%= format_money_from(product.price_local_amount, from_currency: product.price_currency, to_currency: product.price_currency) %></p>
            <% end %>
          <% else %>
            <p class="text-lg font-semibold text-indigo-600"><%= format_money(product.price) %></p>
            <% if product.price_currency.present? && product.price_currency != current_currency %>
              <p class="text-xs text-gray-500">Original price: <%= format_money_from(product.price_local_amount, from_currency: product.price_currency, to_currency: product.price_currency) %></p>
            <% end %>
          <% end %>
        </header>

        <% if product.description.present? %>
          <div class="max-h-40 overflow-y-auto text-sm text-gray-700">
            <%= simple_format(product.description) %>
          </div>
        <% end %>

        <div class="flex flex-wrap gap-3">
          <% if product.stock.to_i.zero? %>
            <span class="inline-flex items-center gap-2 rounded-full bg-gray-200 px-4 py-2 text-sm font-semibold uppercase tracking-wide text-gray-500">
              Out of Stock
            </span>
          <% else %>
            <button type="button" class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2" data-action="click->cart#addItem" data-cart-product-id-param="<%= product.to_param %>" data-cart-quantity-param="1" data-product-id="<%= product.to_param %>" data-quantity="1">
              Add to cart
            </button>
          <% end %>
          <a href="<%= product_path(product) %>" class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2">
            View full details
          </a>
          <button type="button" class="inline-flex items-center gap-2 rounded-full border border-gray-300 px-4 py-2 text-sm font-semibold text-gray-700 transition hover:border-indigo-400 hover:text-indigo-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2" data-action="product-modal#close">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
