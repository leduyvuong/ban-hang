<% breadcrumb_items = [
  { name: "Home", path: root_path, url: root_url },
  { name: "Products", path: products_path, url: products_url },
  { name: @product.name, path: product_path(@product), url: product_url(@product) }
] %>

<% content_for :structured_data do %>
  <%# The layout yields :structured_data, so this script is injected into <head> for SEO crawlers. %>
  <% breadcrumb_json_ld = {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": breadcrumb_items.each_with_index.map { |item, index|
      {
        "@type": "ListItem",
        "position": index + 1,
        "name": item[:name],
        "item": item[:url]
      }
    }
  } %>
  <script type="application/ld+json">
    <%= breadcrumb_json_ld.to_json.html_safe %>
  </script>
<% end %>

<nav class="text-sm text-gray-500" aria-label="Breadcrumb">
  <ol class="flex flex-wrap items-center gap-1">
    <% breadcrumb_items.each_with_index do |item, index| %>
      <li class="flex items-center gap-1">
        <% if index.zero? %>
          <a href="<%= item[:path] %>" class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-3 py-1 font-medium text-gray-700 transition hover:bg-indigo-100 hover:text-indigo-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75" />
            </svg>
            <span><%= item[:name] %></span>
          </a>
        <% elsif index == breadcrumb_items.size - 1 %>
          <span aria-current="page" class="rounded-full bg-indigo-600 px-3 py-1 font-semibold text-white"><%= item[:name] %></span>
        <% else %>
          <a href="<%= item[:path] %>" class="rounded-full bg-gray-100 px-3 py-1 font-medium text-gray-700 transition hover:bg-indigo-100 hover:text-indigo-600"><%= item[:name] %></a>
        <% end %>
      </li>
      <% unless index == breadcrumb_items.size - 1 %>
        <li aria-hidden="true" class="text-gray-400">/</li>
      <% end %>
    <% end %>
  </ol>
</nav>

<article class="mt-6 grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
  <div class="relative overflow-hidden rounded-3xl bg-white shadow-sm ring-1 ring-gray-200">
    <% if (hero_image = @product.image_variant(width: 1200, height: 720)) %>
      <%= image_tag hero_image, alt: @product.name, class: "h-full w-full object-cover", loading: "lazy" %>
    <% else %>
      <div class="flex h-full min-h-[320px] items-center justify-center bg-gray-100 text-gray-400">
        <span class="text-lg">No product image yet</span>
      </div>
    <% end %>
    <% if @product.discounted? %>
      <span class="absolute left-6 top-6 inline-flex items-center rounded-full bg-emerald-500 px-4 py-1.5 text-sm font-semibold uppercase tracking-wide text-white shadow">
        <%= @product.discount_badge_label(currency: current_currency) %>
      </span>
    <% end %>
  </div>

  <div class="space-y-6">
    <header class="space-y-3">
      <% if @product.category.present? %>
        <span class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-indigo-600"><%= @product.category.name %></span>
      <% end %>
      <h1 class="text-4xl font-bold text-gray-900"><%= @product.name %></h1>
      <% if @product.short_description.present? %>
        <p class="text-lg text-gray-600"><%= @product.short_description %></p>
      <% end %>
      <div class="flex flex-wrap items-center gap-3 text-sm">
        <% if @product.reviews_count.positive? %>
          <div class="inline-flex items-center gap-3 rounded-full bg-amber-50 px-3 py-1 font-medium text-amber-600">
            <span class="flex items-center gap-1 text-base">
              <%= render_rating_stars(@product.average_rating) %>
            </span>
            <span class="text-gray-700"><%= @product.average_rating %> / 5.0</span>
            <span class="text-amber-500">(<%= pluralize(@product.reviews_count, "review") %>)</span>
          </div>
        <% else %>
          <span class="text-gray-500">No reviews yet</span>
        <% end %>
      </div>
    <% if @product.discounted? %>
      <% active_discount = @product.active_discount %>
      <div class="space-y-2">
        <div class="flex flex-wrap items-center gap-3">
          <span class="inline-flex items-center rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-emerald-700">
            <%= @product.discount_badge_label(currency: current_currency) %>
            </span>
            <% if active_discount&.end_date.present? %>
              <span class="inline-flex items-center gap-1 rounded-full bg-amber-100 px-3 py-1 text-xs font-semibold text-amber-700" data-controller="countdown" data-countdown-target-time-value="<%= active_discount.end_date.iso8601 %>" data-countdown-expired-text-value="Offer ended">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6l3 3" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12a8.25 8.25 0 1116.5 0 8.25 8.25 0 01-16.5 0z" />
                </svg>
                <span data-countdown-target="label">Ends in <%= distance_of_time_in_words(Time.current, active_discount.end_date) %></span>
              </span>
            <% end %>
          </div>
          <div class="flex items-baseline gap-3">
            <p class="text-4xl font-bold text-emerald-600"><%= format_money(@product.discounted_price) %></p>
            <p class="text-xl text-gray-400 line-through"><%= format_money(@product.price) %></p>
          </div>
          <% percentage_value = @product.discount_percentage.to_f %>
          <p class="text-sm font-medium text-emerald-700">
            You save <%= format_money(@product.discount_amount) %>
            (<%= number_to_percentage(percentage_value, precision: (percentage_value % 1).zero? ? 0 : 1) %>)
          </p>
          <% if @product.price_currency.present? && @product.price_currency != current_currency %>
            <p class="text-xs text-gray-500">Original price: <%= format_money_from(@product.price_local_amount, from_currency: @product.price_currency, to_currency: @product.price_currency) %></p>
          <% end %>
        </div>
      <% else %>
        <p class="text-2xl font-semibold text-indigo-600"><%= format_money(@product.price) %></p>
        <% if @product.price_currency.present? && @product.price_currency != current_currency %>
          <p class="text-xs text-gray-500">Original price: <%= format_money_from(@product.price_local_amount, from_currency: @product.price_currency, to_currency: @product.price_currency) %></p>
        <% end %>
      <% end %>
    </header>

    <% if @product.description.present? %>
      <section class="prose max-w-none text-gray-700">
        <%= simple_format(@product.description) %>
      </section>
    <% end %>

    <div class="flex flex-wrap gap-3">
      <% if @product.stock.to_i.zero? %>
        <span class="inline-flex items-center gap-2 rounded-full bg-gray-200 px-5 py-2.5 text-sm font-semibold uppercase tracking-wide text-gray-500">
          Out of Stock
        </span>
      <% else %>
        <button type="button" class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-5 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2" data-action="click->cart#addItem" data-cart-product-id-param="<%= @product.to_param %>" data-cart-quantity-param="1" data-product-id="<%= @product.to_param %>" data-quantity="1">
          Add to cart
        </button>
      <% end %>
      <%= link_to "View cart", cart_path, class: "inline-flex items-center gap-2 rounded-full border border-indigo-200 px-5 py-2.5 text-sm font-semibold text-indigo-600 transition hover:border-indigo-400 hover:text-indigo-700" %>
      <% if logged_in? %>
        <% if @wishlist_item_present %>
          <%= button_to "Saved", product_wishlist_path(@product), method: :delete, class: "inline-flex items-center gap-2 rounded-full bg-amber-100 px-5 py-2.5 text-sm font-semibold text-amber-700 transition hover:bg-amber-200", form: { data: { turbo_confirm: "Remove this product from your wishlist?" } } %>
        <% else %>
          <%= button_to "Add to wishlist", product_wishlist_path(@product), class: "inline-flex items-center gap-2 rounded-full border border-amber-200 px-5 py-2.5 text-sm font-semibold text-amber-600 transition hover:border-amber-300" %>
        <% end %>
      <% else %>
        <%= link_to "Log in to save", new_session_path, class: "inline-flex items-center gap-2 rounded-full border border-gray-200 px-5 py-2.5 text-sm font-semibold text-gray-600 transition hover:border-gray-300" %>
      <% end %>
    </div>

    <div data-controller="product-modal" data-product-modal-url-value="<%= modal_product_path(@product) %>" class="space-y-3">
      <button type="button" data-action="product-modal#open" class="inline-flex items-center gap-2 rounded-full bg-indigo-600 px-5 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-indigo-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 9V5.25m0 3.75A2.25 2.25 0 1 1 9 11.25m2.25-2.25A2.25 2.25 0 1 0 13.5 11.25m-2.25 0V18m0 0h2.25m-2.25 0H9" />
        </svg>
        Quick view
      </button>
      <p class="text-sm text-gray-500">The modal loads with AJAX from <code>/products/<%= @product.to_param %>/modal</code>, so the main product URL stays crawlable.</p>
      <div data-product-modal-target="container"></div>
    </div>
  </div>
</article>

<section id="product-reviews" class="mt-16 space-y-8">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h2 class="text-3xl font-bold text-gray-900">Customer reviews</h2>
      <% if @product.reviews_count.positive? %>
        <p class="text-sm text-gray-500">
          Average rating <span class="font-semibold text-gray-900"><%= @product.average_rating %></span> from <%= pluralize(@product.reviews_count, "review") %>.
        </p>
      <% else %>
        <p class="text-sm text-gray-500">Be the first to share your experience with this product.</p>
      <% end %>
    </div>
    <%= link_to "View wishlist", wishlist_path, class: "inline-flex items-center gap-2 rounded-full border border-amber-200 px-4 py-2 text-sm font-semibold text-amber-600 transition hover:border-amber-300" if logged_in? %>
  </div>

  <div class="grid gap-8 lg:grid-cols-[0.85fr_1.15fr]">
    <div class="rounded-3xl bg-white p-6 shadow-sm ring-1 ring-gray-200">
      <h3 class="text-xl font-semibold text-gray-900">Share your thoughts</h3>
      <p class="mt-1 text-sm text-gray-500">Rate this product and leave a review to help other shoppers.</p>

      <% if logged_in? %>
        <%= form_with url: product_reviews_path(@product), scope: :review, class: "mt-6 space-y-4" do |form| %>
          <div>
            <%= form.label :rating, "Your rating", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :rating, options_for_select((1..5).to_a.reverse.map { |score| ["#{score} star#{'s' if score > 1}", score] }, (@user_review&.rating || 5)), {}, class: "mt-2 block w-full rounded-2xl border-gray-200 px-4 py-2.5 text-sm font-medium text-gray-700 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>
          <div>
            <%= form.label :comment, "Write a review", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_area :comment, value: @user_review&.comment, rows: 4, class: "mt-2 block w-full rounded-2xl border-gray-200 px-4 py-3 text-sm text-gray-700 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
            <p class="mt-1 text-xs text-gray-400">Optional. Maximum 2,000 characters.</p>
          </div>
          <div class="flex flex-wrap items-center gap-3">
            <%= form.submit(@user_review.present? ? "Update review" : "Submit review", class: "inline-flex items-center gap-2 rounded-full bg-indigo-600 px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-indigo-500") %>
            <% if @user_review.present? %>
              <%= button_to "Delete review", product_review_path(@product, @user_review), method: :delete, form: { data: { turbo_confirm: "Remove your review?" } }, class: "inline-flex items-center gap-2 rounded-full border border-gray-200 px-5 py-2.5 text-sm font-semibold text-gray-600 transition hover:border-gray-300" %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="mt-6 rounded-2xl border border-dashed border-gray-200 bg-gray-50 p-6 text-center">
          <p class="text-sm text-gray-600">You need an account to leave a review.</p>
          <div class="mt-4 flex flex-wrap justify-center gap-3">
            <%= link_to "Log in", new_session_path, class: "inline-flex items-center gap-2 rounded-full bg-indigo-600 px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-indigo-500" %>
            <%= link_to "Create account", new_registration_path, class: "inline-flex items-center gap-2 rounded-full border border-indigo-200 px-5 py-2.5 text-sm font-semibold text-indigo-600 transition hover:border-indigo-300 hover:text-indigo-700" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="space-y-4">
      <% if @reviews.any? %>
        <ul class="space-y-4">
          <% @reviews.each do |review| %>
            <li class="rounded-3xl bg-white p-6 shadow-sm ring-1 ring-gray-200">
              <div class="flex flex-wrap items-start justify-between gap-3">
                <div class="flex items-center gap-3">
                  <%= user_avatar_tag(review.user, size: :sm) %>
                  <div>
                    <p class="text-sm font-semibold text-gray-900">
                      <%= review.user.name %>
                      <% if current_user == review.user %>
                        <span class="ml-2 rounded-full bg-indigo-100 px-2 py-0.5 text-xs font-semibold uppercase tracking-wide text-indigo-600">You</span>
                      <% end %>
                    </p>
                    <p class="text-xs text-gray-500"><%= review.created_at.strftime("%b %d, %Y") %></p>
                  </div>
                </div>
                <div class="text-right text-sm font-semibold text-amber-500">
                  <span class="flex items-center justify-end gap-1">
                    <%= render_rating_stars(review.rating) %>
                    <span class="text-gray-700"><%= review.rating %> / 5</span>
                  </span>
                </div>
              </div>
              <% if review.comment.present? %>
                <div class="mt-4 text-sm text-gray-700"><%= simple_format(review.comment) %></div>
              <% else %>
                <p class="mt-4 text-sm italic text-gray-500">No written review.</p>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="rounded-3xl border border-dashed border-gray-200 bg-white p-10 text-center shadow-sm">
          <p class="text-gray-500">There are no reviews for this product yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</section>
