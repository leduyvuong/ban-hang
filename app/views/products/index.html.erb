<div class="mb-8 flex items-center justify-between">
  <div>
    <h2 class="text-2xl font-semibold text-gray-900">Featured products</h2>
    <p class="text-sm text-gray-500">Hand-picked items for modern living.</p>
  </div>
  <a href="#" class="hidden rounded-full border border-indigo-600 px-4 py-2 text-sm font-medium text-indigo-600 transition hover:bg-indigo-50 sm:inline-flex">View all</a>
</div>

<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <% @products.each do |product| %>
    <article class="flex flex-col overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm transition hover:-translate-y-1 hover:shadow-lg">
      <div class="relative h-52 w-full bg-gray-100">
        <% if product.image_url.present? %>
          <img src="<%= product.image_url %>" alt="<%= product.name %>" class="absolute inset-0 h-full w-full object-cover">
        <% else %>
          <div class="flex h-full w-full items-center justify-center text-sm text-gray-400">No image</div>
        <% end %>
      </div>
      <div class="flex flex-1 flex-col space-y-3 p-5">
        <div>
          <h3 class="text-lg font-semibold text-gray-900"><%= product.name %></h3>
          <% if product.description.present? %>
            <p class="mt-1 text-sm text-gray-500"><%= truncate(product.description, length: 90) %></p>
          <% end %>
        </div>
        <div class="mt-auto flex items-center justify-between">
          <span class="text-xl font-bold text-indigo-600"><%= number_to_currency(product.price) %></span>
          <button type="button" class="rounded-full bg-indigo-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500">Add to cart</button>
        </div>
      </div>
    </article>
  <% end %>
</div>
