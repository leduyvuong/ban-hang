<div class="space-y-8" data-controller="product-filters">
  <div class="max-w-3xl space-y-3">
    <h1 class="text-3xl font-bold text-gray-900">Products</h1>
    <p class="text-base text-gray-600">
      Discover hand-picked Vietnamese goods, then filter or sort the catalogue to find the most relevant items for you.
    </p>
  </div>

  <div class="grid gap-8 lg:grid-cols-[320px_1fr]">
    <aside class="space-y-6 rounded-2xl border border-gray-200 bg-white p-6 shadow-sm">
      <%= render "filters",
        categories: categories,
        sort_options: sort_options,
        stock_filters: stock_filters,
        selected_category: @selected_category,
        selected_sort: @selected_sort,
        search_term: @search_term,
        min_price: @min_price,
        max_price: @max_price,
        stock_status: @stock_status,
        has_active_filters: @has_active_filters %>
    </aside>

    <div class="space-y-6">
      <div data-product-filters-target="skeleton" class="hidden">
        <%= render "loading_skeleton" %>
      </div>

      <turbo-frame
        id="product_list"
        data-product-filters-target="frame"
        data-action="turbo:before-fetch-request->product-filters#handleBeforeFetchRequest turbo:frame-load->product-filters#handleFrameLoad">
        <%= render "products/list", products: @products, pagy: @pagy, search_term: @search_term, sort_options: sort_options, selected_sort: @selected_sort, list_cache_key: @list_cache_key %>
      </turbo-frame>
    </div>
  </div>
</div>
