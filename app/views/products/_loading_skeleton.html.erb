<div class="space-y-4 animate-pulse">
  <div class="flex flex-wrap items-center justify-between gap-3">
    <div class="h-5 w-40 rounded-full bg-gray-200"></div>
    <div class="h-5 w-24 rounded-full bg-gray-200"></div>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <% 6.times do %>
      <div class="h-72 rounded-2xl border border-gray-200 bg-white p-4 shadow-sm">
        <div class="h-36 rounded-xl bg-gray-200"></div>
        <div class="mt-4 space-y-3">
          <div class="h-4 w-3/4 rounded-full bg-gray-200"></div>
          <div class="h-3 w-full rounded-full bg-gray-200"></div>
          <div class="h-3 w-2/3 rounded-full bg-gray-200"></div>
        </div>
        <div class="mt-6 flex items-center justify-between">
          <div class="h-4 w-20 rounded-full bg-gray-200"></div>
          <div class="h-9 w-24 rounded-full bg-gray-200"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
