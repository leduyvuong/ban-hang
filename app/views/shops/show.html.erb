<main class="mx-auto max-w-6xl space-y-10 px-4 py-10">
  <header class="space-y-3">
    <p class="text-sm font-semibold uppercase tracking-wide text-indigo-600">Shop</p>
    <h1 class="text-3xl font-bold text-gray-900"><%= @shop.name %></h1>
    <p class="text-gray-600">Explore categories and products available from this shop.</p>
  </header>

  <% if @categories.present? %>
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold text-gray-900">Categories</h2>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <% @categories.each do |category| %>
          <%= link_to shop_products_path(@shop, category: category.slug), class: "rounded-3xl border border-gray-200 bg-white p-5 shadow-sm transition hover:-translate-y-1 hover:shadow-lg" do %>
            <h3 class="text-lg font-semibold text-gray-900"><%= category.name %></h3>
            <p class="text-sm text-gray-500"><%= pluralize(category.products.size, "product") %></p>
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>

  <section class="space-y-4">
    <div class="flex items-center justify-between">
      <h2 class="text-2xl font-semibold text-gray-900">Products</h2>
      <%= link_to "View all", shop_products_path(@shop), class: "text-sm font-semibold text-indigo-600" %>
    </div>
    <% if @products.present? %>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @products.each do |product| %>
          <% thumb = product.thumbnail(width: 600, height: 360) %>
          <article class="flex h-full flex-col overflow-hidden rounded-3xl border border-gray-200 bg-white shadow-sm transition hover:-translate-y-1 hover:shadow-xl">
            <div class="relative h-48 bg-gray-100">
              <% if thumb.present? %>
                <%= image_tag thumb, alt: product.name, class: "h-full w-full object-cover" %>
              <% end %>
            </div>
            <div class="flex flex-1 flex-col gap-3 p-5">
              <h3 class="text-lg font-semibold text-gray-900"><%= link_to product.name, product_path(product), class: "hover:text-indigo-600" %></h3>
              <p class="text-sm text-gray-500"><%= truncate(product.short_description.presence || product.description, length: 100) %></p>
              <p class="text-base font-semibold text-indigo-600"><%= format_money(product.discounted? ? product.discounted_price : product.price) %></p>
            </div>
          </article>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500">No products published yet.</p>
    <% end %>
  </section>
</main>
