<section class="rounded-3xl border border-slate-200 p-10 shadow-sm transition dark:border-slate-700" style="background-color: <%= background_color %>; color: <%= text_color %>">
  <div class="mx-auto max-w-2xl text-center">
    <h2 class="text-2xl font-semibold"><%= title %></h2>
    <p class="mt-2 text-base opacity-80"><%= subtitle %></p>
  </div>
  <dl class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <% features.each do |feature| %>
      <div class="rounded-2xl border border-slate-200 bg-white/80 p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-lg dark:border-slate-600 dark:bg-slate-800/80">
        <dt class="text-lg font-semibold text-slate-900 dark:text-slate-100"><%= feature[:title] %></dt>
        <dd class="mt-2 text-sm text-slate-600 dark:text-slate-300"><%= feature[:description] %></dd>
      </div>
    <% end %>
  </dl>
</section>
