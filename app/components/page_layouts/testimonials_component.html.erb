<section class="rounded-3xl border border-slate-200 p-10 shadow-sm transition dark:border-slate-700" style="background-color: <%= background_color %>; color: <%= text_color %>">
  <div class="mx-auto max-w-2xl text-center">
    <h2 class="text-2xl font-semibold"><%= title %></h2>
    <p class="mt-2 text-base opacity-80"><%= subtitle %></p>
  </div>
  <div class="mt-10 grid gap-6 md:grid-cols-2">
    <% testimonials.each do |testimonial| %>
      <figure class="relative rounded-2xl border border-slate-200 bg-white/80 p-6 shadow transition hover:-translate-y-1 hover:shadow-lg dark:border-slate-600 dark:bg-slate-800/80">
        <blockquote class="text-left text-base text-slate-700 dark:text-slate-200">
          “<%= testimonial[:quote] %>”
        </blockquote>
        <figcaption class="mt-4 text-sm font-semibold text-slate-900 dark:text-slate-100">
          <%= testimonial[:name] %>
          <span class="ml-2 font-normal text-slate-500 dark:text-slate-300"><%= testimonial[:role] %></span>
        </figcaption>
      </figure>
    <% end %>
  </div>
</section>
