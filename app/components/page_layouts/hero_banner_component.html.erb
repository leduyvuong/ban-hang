<section class="relative overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-xl transition dark:border-slate-700 dark:bg-slate-900">
  <div class="absolute inset-0" style="background-color: <%= background_color %>"></div>
  <div class="relative grid gap-8 p-10 lg:grid-cols-2 lg:items-center">
    <div class="space-y-6 text-left">
      <p class="text-sm font-semibold uppercase tracking-wide text-slate-300"><%= subtitle %></p>
      <h1 class="text-3xl font-bold text-white sm:text-4xl" style="color: <%= text_color %>"><%= title %></h1>
      <div class="flex flex-wrap gap-4">
        <% if primary_button_text.present? %>
          <a href="<%= primary_button_url %>" class="inline-flex items-center rounded-full bg-white px-6 py-3 text-sm font-semibold text-slate-900 shadow hover:shadow-lg">
            <%= primary_button_text %>
          </a>
        <% end %>
        <% if secondary_button_text.present? %>
          <a href="<%= secondary_button_url %>" class="inline-flex items-center rounded-full border border-white/60 px-6 py-3 text-sm font-semibold text-white hover:bg-white/10">
            <%= secondary_button_text %>
          </a>
        <% end %>
      </div>
    </div>
    <% if image_url.present? %>
      <div class="relative">
        <div class="absolute inset-0 rounded-3xl bg-slate-950/20 blur-3xl"></div>
        <img src="<%= image_url %>" alt="Hero banner" class="relative w-full rounded-3xl object-cover shadow-2xl" />
      </div>
    <% end %>
  </div>
</section>
